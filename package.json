{
  "name": "brioso",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "functions"
  ],
  "scripts": {
    "dev": "concurrently \"vite --open\" \"firebase emulators:start\" \"yarn workspace functions watch\"",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write src functions",
    "type-check": "tsc --pretty --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "plugin": "echo \"plugin dummy\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.@(ts|tsx)": "bash -c tsc --skipLibCheck --noEmit",
    "!(functions/**/*)*.@(ts|tsx|js|jsx)": "eslint --max-warnings 0",
    "*.@(ts|tsx|js|jsx|json|jsonc|json5|md|mdx|yaml|yml)": "prettier --write"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "@react-spring/web": "^9.7.3",
    "@reduxjs/toolkit": "^2.0.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "classnames": "^2.5.1",
    "firebase": "^10.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^11.7.1",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.21.2",
    "reactfire": "^4.2.3",
    "vite-plugin-svgr": "^4.2.0",
    "web-vitals": "^3.5.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jsdom": "^21.1.6",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.3",
    "jsdom": "^23.2.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "sass": "^1.69.7",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.1.3"
  },
  "volta": {
    "node": "20.11.0",
    "yarn": "4.0.2"
  }
}
